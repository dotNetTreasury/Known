@page "/doc/{id?}"
@inject IJSRuntime JS;

<div class="doc-container">
    <div class="doc-sider">
        <DocMenu CurItem="@curItem" />
    </div>
    <div class="doc-content markdown-body">
        @DocService.GetDocHtml(curItem)
    </div>
</div>

@code {
    private string? curItem => Id ?? "profile";

    [Parameter] public string? Id { get; set; }
}