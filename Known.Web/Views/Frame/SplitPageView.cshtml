@model Known.Web.ViewModels.SplitPageViewModel
<div class="mini-splitter" style="width:100%;height:100%;">
    <div id="splitLeft" tooltip="关闭/显示菜单" size="150px" showCollapseButton="true" style="padding:5px;">
        <ul id="leftTree" class="mini-tree" url="/static/modules/frame/demo/data/menu.txt"
            style="width:100%;height:100%;" idField="id" textField="text"
            showTreeIcon="true" resultAsTree="false">
        </ul>
    </div>
    <div id="splitRight" style="padding:5px;">
        @if (!string.IsNullOrWhiteSpace(Model.RightPartialName))
        {
            @Html.Partial(Model.RightPartialName)
        }
    </div>
</div>
@section Foot {
    @Html.MinScript("static/modules/frame/demo/index.min.js")
}