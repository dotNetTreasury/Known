<div id="top">
    <div class="mini-toolbar" style="border-bottom:0;padding:2px;">
        <table style="width:100%;">
            <tr>
                <td style="width:100%;">
                    <a id="btnRefresh" class="mini-button" plain="true" iconCls="fa-refresh">刷新</a>
                    <span class="separator"></span>
                    <a class="mini-menubutton" plain="true" iconCls="fa-plus" menu="#menuAdd">新增</a>
                    <ul id="menuAdd" class="mini-menu" style="display:none;">
                        <li id="btnAddForm" iconCls="fa-plus-circle">普通表单</li>
                        <li id="btnAddHlForm" iconCls="fa-plus-square">上表头下表体</li>
                        <li id="btnAddTabForm" iconCls="fa-plus-square-o">Tab表单</li>
                    </ul>
                    <a id="btnEdit" class="mini-button" plain="true" iconCls="fa-pencil">编辑</a>
                    <a id="btnDelete" class="mini-button" plain="true" iconCls="fa-minus">删除</a>
                    <span class="separator"></span>
                    <a id="btnImport" class="mini-button" plain="true" iconCls="fa-sign-in">导入</a>
                    <a class="mini-menubutton" plain="true" iconCls="fa-sign-out" menu="#menuExport">导出</a>
                    <ul id="menuExport" class="mini-menu" style="display:none;">
                        <li id="btnExportExcel" iconCls="fa-file-excel-o">导出Excel</li>
                        <li id="btnExportPdf" iconCls="fa-file-pdf-o">导出Pdf</li>
                    </ul>
                    <span class="separator"></span>
                    <a id="btnUpload" class="mini-button" plain="true" iconCls="fa-upload">上载</a>
                    <a id="btnDownload" class="mini-button" plain="true" iconCls="fa-download">下载</a>
                    <a id="btnSync" class="mini-button" plain="true" iconCls="fa-exchange">同步</a>
                    <span class="separator"></span>
                    <a id="btnClose" class="mini-button" plain="true" iconCls="fa-remove">关闭</a>
                </td>
                <td id="queryDemo" style="white-space:nowrap;">
                    <input id="key" class="mini-textbox" emptyText="请输入关键字" style="width:150px;" />
                    <a class="query-btn-adv">高级</a>
                </td>
            </tr>
        </table>
    </div>
    <div id="queryDemo" class="mini-panel-border query">
        <input id="key" class="mini-textbox" emptyText="请输入关键字" style="width:150px;" />
        <a id="btnSearch" class="mini-button" iconCls="fa-search">搜索</a>
    </div>
</div>
<div class="mini-fit">
    <div id="gridDemo" class="mini-datagrid" style="width:100%;height:100%;"
         url="@Url.Action("QueryUsers", "Demo")" idField="id" multiSelect="true">
        <div property="columns">
            <div type="indexcolumn"></div>
            <div type="checkcolumn"></div>
            <div field="loginname" width="120" headerAlign="center" allowSort="true">员工帐号</div>
            <div field="name" width="120" headerAlign="center" allowSort="true">姓名</div>
            <div field="dept_name" width="120">所属部门</div>
            <div field="position_name" width="100">职位</div>
            <div field="married" width="100">电话</div>
            <div field="email" width="100">邮箱</div>
            <div field="gender" width="100" renderer="onGenderRenderer">性别</div>
            <div field="age" width="100" allowSort="true">年龄</div>
            <div field="birthday" width="100" renderer="onBirthdayRenderer">出生日期</div>
        </div>
    </div>
</div>